<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.bfinerocks.sunshine.app.DetailActivity$PlaceholderFragment">

    <TextView
        android:text="@string/dummy_text"
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/left_margin"
        android:fontFamily="sans-condensed"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:text="@string/dummy_text"
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:fontFamily="sans-condensed"
        android:textSize="16sp"
        android:textColor="#646464"
        android:layout_below="@id/txt_day"/>

    <TextView
        android:text="@string/dummy_temp"
        android:id="@+id/num_HiTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_alignParentLeft="true"
        android:textSize="96sp"
        android:fontFamily="sans-light"
        android:layout_below="@id/txt_date"/>

    <TextView
        android:text="@string/dummy_temp"
        android:id="@+id/num_LowTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:fontFamily="sans-light"
        android:textColor="#646464"
        android:layout_below="@+id/num_HiTemp"
        android:layout_alignRight="@+id/txt_humidity"
        android:layout_alignEnd="@+id/txt_humidity"/>

    <ImageView
        android:id="@+id/img_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/art_clear"
        android:scaleType="center"
        android:layout_toLeftOf="@id/num_HiTemp"
        android:layout_below="@+id/txt_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/num_HiTemp"/>

    <TextView
        android:text="@string/dummy_text"
        android:id="@+id/txt_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-condensed"
        android:textSize="22sp"
        android:textColor="#646464"
        android:layout_below="@+id/img_weather"
        android:layout_alignRight="@+id/img_weather"
        android:layout_alignEnd="@+id/img_weather"/>

    <TextView
        android:text="@string/dummy_text"
        android:id="@+id/txt_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:textSize="22sp"
        android:fontFamily="sans-light"
        android:layout_below="@id/num_LowTemp"/>

    <TextView
        android:text="@string/dummy_text"
        android:id="@+id/txt_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:textSize="22sp"
        android:fontFamily="sans-light"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_below="@id/txt_humidity"/>

    <TextView
        android:text="@string/dummy_text"
        android:id="@+id/txt_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:fontFamily="sans-light"
        android:layout_below="@+id/txt_pressure"
        android:layout_alignLeft="@+id/txt_pressure"
        android:layout_alignStart="@+id/txt_pressure"/>

</RelativeLayout>